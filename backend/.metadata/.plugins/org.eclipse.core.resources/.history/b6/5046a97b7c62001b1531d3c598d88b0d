    @Column(nullable = false, length = 45)
    private String name;
    
    @JsonIgnore 
    @OneToMany(mappedBy = "restaurant", targetEntity = FoodItem.class,fetch =FetchType.EAGER)
    private Set<FoodItem> restaurantFooditems;

